{
  "name": "openfort-betterauth",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter @openfort-betterauth/web dev\" \"pnpm --filter @openfort-betterauth/server dev\"",
    "build": "pnpm --filter @openfort-betterauth/web build && pnpm --filter @openfort-betterauth/server build",
    "check": "biome check --write --unsafe",
    "format": "biome format --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "concurrently": "^9.1.2"
  }
}
