{
  "name": "openfort-react",
  "version": "0.0.0",
  "description": "The easiest way to integrate Openfort to your project.",
  "main": "packages/openfort-react/src/index.ts",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/**/*"
  ],
  "scripts": {
    "dev": "yarn workspace @openfort/react run dev",
    "dev:firebase": "yarn workspace firebase run dev",
    "dev:headless": "yarn workspace headless run dev",
    "dev:playground": "yarn workspace playground run dev",
    "build": "node build.js && yarn workspace @openfort/react run build && cp README.md packages/openfort-react/README.md",
    "build:firebase": "yarn build && yarn workspace firebase build",
    "build:headless": "yarn build && yarn workspace headless build",
    "build:playground": "yarn build && yarn workspace playground build",
    "build:ci": "yarn workspaces foreach -R run build",
    "lint:ci": "yarn workspaces foreach -R run lint"
  },
  "devDependencies": {
    "@openfort/openfort-js": "^0.10.21",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@tanstack/react-query": "^5.17.15",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "rollup": "^2.67.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.36.0",
    "rollup-plugin-visualizer": "^5.5.4",
    "tslib": "^1.9.3",
    "typescript": "^5.0.4",
    "typescript-plugin-styled-components": "^2.0.0",
    "viem": "2.33.0",
    "wagmi": "^2.16.0"
  },
  "resolutions": {
    "wagmi": "^2.16.0",
    "viem": "2.33.0"
  },
  "packageManager": "yarn@3.2.0",
  "dependencies": {
    "@changesets/cli": "^2.24.4"
  }
}
