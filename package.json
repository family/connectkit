{
  "name": "openfort-react",
  "version": "0.0.0",
  "description": "The easiest way to integrate Openfort to your project.",
  "main": "packages/openfort-react/src/index.ts",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**",
      "examples/**",
      "!packages/create-openfort/template/**"
    ]
  },
  "scripts": {
    "preinstall": "pnpx only-allow pnpm",
    "postinstall": "git config --unset core.hooksPath 2>/dev/null || true && simple-git-hooks",
    "check": "biome check",
    "check:fix": "biome check --write --unsafe",
    "check:types": "tsc --noEmit",
    "check:unused": "knip",
    "check:audit": "pnpm audit --audit-level=moderate",
    "check:quickstarts": "pnpm --filter quickstart-headless check",
    "check:all": "pnpm check && pnpm check:types && pnpm check:unused && pnpm check:audit",
    "check:cli": "pnpm --filter create-openfort check",
    "sync-templates": "node scripts/sync-templates.js",
    "changeset": "changeset",
    "changeset:version": "node scripts/sync-templates.js && pnpm install --lockfile-only && changeset version && node scripts/change-version.js && cp packages/openfort-react/CHANGELOG.md CHANGELOG.md",
    "changeset:publish": "pnpm build && pnpm build:cli && changeset publish",
    "changeset:prepublish": "pnpm build",
    "dev": "pnpm --filter @openfort/react dev",
    "dev:cli": "pnpm --filter create-openfort dev",
    "dev:firebase": "cd examples/quickstarts/firebase && pnpm dev",
    "dev:headless": "cd examples/quickstarts/headless && pnpm dev",
    "dev:openfort-ui": "cd examples/quickstarts/openfort-ui && pnpm dev",
    "dev:playground": "pnpm --filter playground dev",
    "build": "node scripts/change-version.js && pnpm --filter @openfort/react build && cp README.md packages/openfort-react/README.md",
    "build:cli": "pnpm --filter create-openfort build",
    "build:firebase": "cd examples/quickstarts/firebase && pnpm build",
    "build:headless": "cd examples/quickstarts/headless && pnpm build",
    "build:openfort-ui": "cd examples/quickstarts/openfort-ui && pnpm build",
    "build:playground": "pnpm build && pnpm --filter playground build",
    "build:ci": "pnpm -r run build",
    "start:cli": "pnpm --filter create-openfort start",
    "test": "pnpm --filter playground test",
    "test:ui": "pnpm --filter playground test:ui",
    "test:debug": "pnpm --filter playground test:debug"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@biomejs/biome": "^2.2.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@playwright/test": "^1.57.0",
    "@wagmi/connectors": "^6.1.0",
    "@wagmi/core": "^2.22.1",
    "knip": "^5.64.0",
    "rollup": "^2.67.1",
    "simple-git-hooks": "^2.13.1",
    "typescript": "^5.0.4",
    "typescript-plugin-styled-components": "^2.0.0",
    "viem": "^2.38.4",
    "wagmi": "^2.18.2"
  },
  "packageManager": "pnpm@10.16.1",
  "pnpm": {
    "overrides": {
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "@types/react": "18.3.1",
      "@types/react-dom": "18.3.1",
      "viem": "^2.38.4",
      "wagmi": "^2.18.2",
      "typescript": "^5.0.4",
      "hono": ">=4.10.3",
      "cross-spawn": ">=6.0.6",
      "got": ">=11.8.5",
      "esbuild": ">=0.25.0",
      "glob@>=10.3.7 <=11.0.3": ">=11.1.0",
      "body-parser@>=2.2.0 <2.2.1": ">=2.2.1",
      "@modelcontextprotocol/sdk@<1.24.0": ">=1.24.0",
      "qs@<6.14.1": ">=6.14.1",
      "@modelcontextprotocol/sdk@<1.25.2": "1.25.2",
      "preact@>=10.28.0 <10.28.2": ">=10.28.2",
      "hono@<4.11.4": ">=4.11.4"
    },
    "auditConfig": {
      "ignoreCves": [
        "CVE-2024-53384",
        "CVE-2025-57319",
        "CVE-2025-14505"
      ]
    }
  },
  "knip": {
    "ignore": [
      ".github/**",
      "**/build/**",
      "**/dist/**",
      "**/.next/**",
      "**/coverage/**",
      "**/node_modules/**",
      "packages/openfort-react/rollup.config.dev.js",
      "packages/openfort-react/rollup.config.prod.js",
      "**/*.gen.ts",
      "examples/playground/src/api/**",
      "packages/create-openfort/.github/**",
      "packages/create-openfort/template/**"
    ],
    "ignoreDependencies": [
      "rollup-plugin-peer-deps-external",
      "rollup-plugin-typescript2",
      "typescript-plugin-styled-components",
      "buffer",
      "wagmi",
      "@babel/core"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm check --staged --no-errors-on-unmatched"
  }
}
