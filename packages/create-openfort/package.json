{
  "name": "@openfort/root",
  "version": "0.0.0",
  "description": "The best way to start a Web3 app with Openfort",
  "author": "Openfort (https://www.openfort.io)",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openfort-xyz/create-openfort-app.git"
  },
  "keywords": [
    "create-openfort-app",
    "openfort",
    "embedded-wallets",
    "web3",
    "blockchain",
    "react",
    "typescript"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "pnpm@10.8.0",
  "scripts": {
    "typecheck": "turbo typecheck",
    "build:cli": "turbo --filter=create-openfort build",
    "build:www": "turbo --filter=www build",
    "build": "turbo build",
    "start:cli": "turbo --filter=create-openfort start",
    "start:www": "turbo --filter=www start",
    "dev:cli": "turbo --filter=create-openfort dev",
    "dev:www": "turbo --filter=www dev",
    "clean": "turbo clean && rm -rf node_modules",
    "lint": "turbo lint && manypkg check",
    "lint:fix": "turbo lint:fix && manypkg fix",
    "format": "turbo format",
    "format:check": "turbo format:check",
    "check": "turbo lint typecheck format:check && manypkg check",
    "release": "changeset version",
    "pub:beta": "cd cli && pnpm pub:beta",
    "pub:release": "cd cli && pnpm pub:release"
  },
  "dependencies": {
    "@changesets/cli": "^2.27.3",
    "@manypkg/cli": "^0.20.0",
    "@total-typescript/ts-reset": "^0.3.7",
    "@types/node": "^20.14.10",
    "turbo": "1.13.3-canary.3",
    "typescript": "^5.8.2"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn": "^7.0.6",
      "esbuild": "^0.25.0"
    }
  }
}
