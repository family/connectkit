{
  "$schema": "https://unpkg.com/@changesets/config@2.1.0/schema.json",
  "changelog": [
    "@changesets/changelog-github",
    {
      "repo": "openfort-xyz/openfort-react"
    }
  ],
  "snapshot": {
    "prereleaseTemplate": "{tag}-{datetime}"
  },
  "ignore": [
    "playground",
    "openfort-betterauth",
    "@openfort-betterauth/server",
    "@openfort-betterauth/web",
    "quickstart-firebase",
    "quickstart-headless",
    "quickstart-openfort-ui",
    "quickstart-supabase"
  ],
  "commit": false,
  "access": "public",
  "baseBranch": "main",
  "updateInternalDependencies": "patch"
}
