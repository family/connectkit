{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      "packages/**",
      "examples/playground/**",
      "!examples/playground/**/*.css",
      "!examples/playground/src/routeTree.gen.ts",
      "*.js",
      "*.ts",
      "*.json",
      "!**/build",
      "!**/dist",
      "!**/.next",
      "!**/coverage",
      "!**/node_modules",
      "!packages/openfort-react/src/assets",
      "!examples/quickstarts",
      "!packages/create-openfort/cli/template",
      "!packages/create-openfort/.github",
      "!packages/create-openfort/.codesandbox"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "off"
      },
      "performance": {
        "noBarrelFile": "off",
        "noReExportAll": "error",
        "noDelete": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "useConsistentArrayType": {
          "level": "error",
          "options": {
            "syntax": "shorthand"
          }
        }
      },
      "a11y": {
        "noAutofocus": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConsole": {
          "level": "error"
        },
        "noAlert": {
          "level": "error"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "always"
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "overrides": [
    {
      "includes": ["packages/create-openfort/**"],
      "formatter": {
        "lineWidth": 80
      },
      "javascript": {
        "formatter": {
          "quoteStyle": "double",
          "trailingCommas": "all",
          "semicolons": "always"
        }
      },
      "linter": {
        "rules": {
          "style": {
            "useImportType": "error"
          },
          "suspicious": {
            "noExplicitAny": "error"
          }
        }
      }
    }
  ]
}
